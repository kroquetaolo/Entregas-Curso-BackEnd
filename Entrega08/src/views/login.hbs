<form class="profile-form" action="api/sessions/login" method="post">
    <input
        class="profile-input" type="email" id="email" name="email" placeholder="Email"/><br /><br />
    <input class="profile-input" type="password" id="password" name="password" placeholder="Password"/><br /><br />

    <input class="profile-submit{{#if session.user}} disabled{{/if}}" {{#if session.user}}disabled{{/if}} type="submit"  value="Login" />
    <p>Don't have an account yet? <a href="/register" class="orange">Sign Up</a> here</p>
</form>